<h2>Your Cart</h2>
<table>
  <%= render cart.line_items %>

  <tr class="total_line">
    <!--    colspan 属性规定单元格可横跨的列数-->
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>
</table>

<%= button_to 'Clear Cart', cart, method: :delete, data:{ confirm: 'Are you sure?' } %>